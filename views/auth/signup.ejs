<body>
    <%- include('../includes/navbar.ejs') %>
    <div id="newsletter_panel" class="newsletter_panel_signup">
        <div class="form-background">
            <h1 class="active">Welcome !!</h1>
            <div class="container">
                <form class="login-form" action='/signup' method="POST">
                    <div class="txtb">
                        <label for="username"> Username</label>
                        <input class="input100" name="username" type="text">
                        <span class="focus-input100"></span>
                    </div>
                    <div class="txtb">
                        <label>Email</label>
                        <input class="input100" id="email_input" name="email" type="text">
                        <!-- <span class="focus-input100" style="margin-top: 135px;"></span> -->
                        <h5 style="display: inline-block;">@</h5>
                        <select name="mailaddr" id="dropdown" style="width: 20%;margin: 0; display: inline-block;font-size: 1rem;">
                            <option value="iiita.ac.in">iiita.ac.in</option>
                            <option value="mnnit.ac.in">mnnit.ac.in</option>\
                            <option value="iitk.ac.in">iitk.ac.in</option>
                        </select>
                    </div>                        
                    <div class="txtb">
                        <label>Password</label>
                        <input class="input100" name="password" type="password">
                        <span class="focus-input100" style="margin-top: 135px;"></span>
                    </div>
                    <div class="txtb">
                        <label>Ph No.</label>
                        <input class="input100" name="cell" type="number">
                        <span class="focus-input100" style="margin-top: 135px;"></span>
                    </div>
                    <div class="txtb">
                        <label>College</label>
                        <select name="college" id="dropdown">
                            <option value="IIITA">IIITA</option>
                            <option value="MNNIT">MNNIT</option>\
                            <option value="IITK">IITK</option>
                        </select>
                    </div>
                    <div class="txtb">
                        <label>City</label>
                        <input class="input100" name="city" type="text">
                        <span class="focus-input100" style="margin-top: 135px;"></span>
                    </div>
                    <!-- <div class="txtb">
                        <label>Password</label>
                        <input class="input100" name="password" type="password">
                        <span class="focus-input100" style="margin-top: 135px;"></span>
                    </div> -->
                    <input type="submit" class="logbtn" value="SignUp">
                    <div class="bottom-text">
                        <a class="fpswd" href="#">Forgot Password?</a>
                        <p style="display: inline;">Already have an account? </p> <a class="sgnup" style="color: #57b846;" href="/login">Login</a> 
                    </div>      
                </form>           
            </div>
        </div>
    </div>
